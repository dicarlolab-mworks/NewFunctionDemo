<?xml version="1.0" standalone="no"?>
<monkeyml version="1.0">
    <io_devices tag="IO Devices"></io_devices>
    <variables tag="Variables">
        <variable tag="EXP_NumberTrials" scope="global" logging="when_changed" default_value="get_num_trials(&quot;some_file.txt&quot;, 5)" type="integer"></variable>
        <variable tag="index" scope="local" logging="when_changed" default_value="0" type="integer"></variable>
    </variables>
    <sounds tag="Sounds"></sounds>
    <stimuli tag="Stimuli"></stimuli>
    <filters tag="Filters"></filters>
    <optimizers tag="Optimizers"></optimizers>
    <experiment tag="New Experiment" full_name="" description="">
        <protocol tag="New Protocol" nsamples="1" sampling_method="cycles" selection="sequential" interruptible="YES">
            <range_replicator tag="New Range Replicator" from="1" to="EXP_NumberTrials" step="1" variable="index">
                <trial tag="New Trial" nsamples="1" sampling_method="cycles" selection="sequential" interruptible="YES">
                    <action type="report" tag="Report" message="index = $index"></action>
                </trial>
            </range_replicator>
        </protocol>
    </experiment>
</monkeyml>